#ifndef INC_KLEBOT_PARSER_H_
#define INC_KLEBOT_PARSER_H_

#include "klebot_commands.h"
#include "stdio.h"
#include "klebot_radio.h"

typedef enum
{
	INTERNAL_DATA_SRC,	//commands from robot itself (buttons)
	RADIO_DATA_SRC,		//comands from radio (nrf)
	UART_DATA_SRC,		//comands via uart
	USB_DATA_SRC			//commands from usb com port
}Parser_DataSource_t;



void Parser_Klebot(uint8_t *command, uint8_t length, Parser_DataSource_t dataSource);

#endif /* INC_KLEBOT_PARSER_H_ */
